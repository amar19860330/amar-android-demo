<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.amar.hello2.ServiceActivity">

    <TextView
        android:text="@string/hello_world"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/service_start_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="启动第一个服务"/>
    <Button
        android:id="@+id/service_stop_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="关闭第一个服务"/>
    <Button
        android:id="@+id/service_status_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="第一个服务状态"/>

    <Button
        android:id="@+id/service_bind_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bind Service" />

    <Button
        android:id="@+id/service_unbind_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Unbind Service"
        />

</GridLayout>
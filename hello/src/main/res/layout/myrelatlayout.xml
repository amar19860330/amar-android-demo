<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
    <TextView
        android:id="@+id/layoutView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/i3"
        android:layout_centerInParent="true"/>
    <TextView
        android:id="@+id/layoutView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/i2"
        android:layout_above="@id/layoutView1"
        android:layout_alignLeft="@id/layoutView1"/>
    <TextView
        android:id="@+id/layoutView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/i3"
        android:layout_below="@id/layoutView1"
        android:layout_alignLeft="@id/layoutView1"/>
    <TextView
        android:id="@+id/layoutView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/i1"
        android:layout_toLeftOf="@id/layoutView1"
        android:layout_alignTop="@id/layoutView1"/>
    <TextView
        android:id="@+id/layoutView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/i3"
        android:layout_toRightOf="@id/layoutView1"
        android:layout_alignTop="@id/layoutView1" />


</RelativeLayout>
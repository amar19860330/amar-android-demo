<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.amar.hello2.SubWidget1Activity"
    >
    
    <Button
        android:layout_row="0"
        android:layout_column="0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="普通按钮1" android:textSize="10pt"/>
    <Button
        android:layout_row="0"
        android:layout_column="1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="图片按钮"
        android:textSize="10pt"
        android:background="@drawable/button_selector"/>

    
    <ImageButton
        android:layout_row="1" android:layout_column="0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/i2"
        />
    <ImageButton
        android:layout_row="1" android:layout_column="1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/button_selector"
        />

    <EditText
        android:layout_row="2" android:layout_column="0"
        android:layout_columnSpan="2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ff0000"
        android:shadowDx="15"
        android:shadowDy="25"
        android:shadowColor="#00ffff"
        android:text="测试文字"
        android:selectAllOnFocus="true"
        android:phoneNumber="true" android:id="@+id/mydatetimeinfo"/>
    <TextView
        android:layout_row="3" android:layout_column="0"
        android:text="@string/test4input"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:drawableLeft="@drawable/i1"/>
    <RadioGroup  android:layout_row="3" android:layout_column="1"
        android:id="@+id/sex"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal">
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:text="男" android:id="@+id/male"/>
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:text="女" android:id="@+id/female"/>
    </RadioGroup>
    <LinearLayout
        android:layout_row="4" android:layout_column="0"
        android:layout_gravity="center_horizontal">
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="红色"
            />
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="绿色"
            android:checked="true"/>
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="蓝色"
            android:checked="true"/>

    </LinearLayout>


    <DatePicker android:id="@+id/mydatepicker"
                android:layout_row="5" android:layout_column="0" android:layout_columnSpan="2"
        android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        />
    <TimePicker android:id="@+id/mytimepicker"
                android:layout_row="6" android:layout_column="0" android:layout_columnSpan="2"
                android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
        />


</GridLayout>
